# Production Environment Variables
# Copy this file to .env.production on your server

# Database
MONGO_USERNAME=voltuser
MONGO_PASSWORD=your-secure-mongo-password
MONGO_URI=mongodb://voltuser:your-secure-mongo-password@mongo:27017/volt

# Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_URI=redis://:your-secure-redis-password@redis:6379

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-64-characters-long

# API URLs (update with your domain)
CORS_ORIGIN=https://volt.yourdomain.com
WS_ORIGIN=wss://api.yourdomain.com
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# App Configuration
VITE_APP_NAME=Volt
VITE_BRAND_COLOR=#2563EB
GIN_MODE=release